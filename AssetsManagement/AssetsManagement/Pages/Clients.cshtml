@page "{id:int?}"
@model AssetsManagement.Pages.ClientsModel
@{
    ViewData["Title"] = "Clients";
}
<h1>Clients</h1>

<table class="table mt-5" style="width:100%">
    <thead>
        <tr>
            <th style=First Name</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var el in Model.Clients)
        {
            <tr>
                <td>@el.Name</td>
                <td>
                    <a asp-page="./Clients" asp-route-name="@el.Id">Select</a> |
                    <a asp-page="./EditClient" asp-route-name="@el.Id">Edit</a> |
                    <a asp-page="./DeleteClient" asp-route-name="@el.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

        @if (Model.Assets!=null )
        {
            <h3>Assets per Client</h3>
            <table class="table">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Value</th>
                        <th>Last Updated</th>
                        <th>Category</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var asset in Model.Assets)
                    {   
                        <tr>
                            <td>
                                @asset.name
                            </td>
                            <td>
                                @asset.value
                            </td>
                            <td>
                                @asset.assetDate
                            </td>
                            <td>
                                @asset.assetCategory
                            </td>
                        </tr>
                    }
                 </tbody>
            </table>
}
