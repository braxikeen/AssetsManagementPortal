@page
@model AssetsManagement.Pages.DeleteAccountManagerModel
@{
    ViewData["Title"] = "Delete Account Manager";
}

<h1>Delete Account Manager</h1>

<p class="text-danger">@Model.ErrorMessage</p>

<h3>Are you sure you want to delete this Account Manager</h3>
<div>
    <hr />
    <br />
    @if (Model.AccountManager != null)
    {
        <dl class="row">
            <dt class="col-sm-3 mb-4">First Name</dt>
            <dd class="col-sm-9 mb-4">@Html.DisplayFor(model => model.AccountManager!.Name)</dd>
            <dt class="col-sm-3 mb-4">Last Name</dt>
            <dd class="col-sm-9 mb-4">@Html.DisplayFor(model => model.AccountManager!.Surname)</dd>
        </dl>
        <form method="post">
            <input type="hidden" asp-for="AccountManager.Id" />
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            <a asp-page="AccountManagers">Back to List</a>
        </form>
    }
    else
    {
        <div class="text-danger">Account Manager not found</div>
    } 
</div>
