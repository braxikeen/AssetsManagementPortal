@page
@model AssetsManagement.Pages.EditRateModel
@{
}
<h1>Edit Rate</h1>
<hr />
<h2>@Model.Rate.Currency</h2>
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <input type="hidden" asp-for="Rate.Currency" />
            <div class="form-group">
                <label asp-for="Rate.Value" class="control-label"></label>
                <input asp-for="Rate.Value" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Rate.LastUpdated" class="control-label"></label>
                <input asp-for="Rate.LastUpdated" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>